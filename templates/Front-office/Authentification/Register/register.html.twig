{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    
    <div class="container">
        <h2 class="my-4"> S'inscrire </h2>

        {{ form_start(registrationForm) }}
            <div class="form-group">
                {{ form_label(registrationForm.name) }}
                {{ form_widget(registrationForm.name) }}
                <div class="form-error">
                    {{ form_errors(registrationForm.name) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.firstName) }}
                {{ form_widget(registrationForm.firstName) }}
                <div class="form-error">
                    {{ form_errors(registrationForm.firstName) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.adress) }}
                {{ form_widget(registrationForm.adress) }}
                <div class="form-error">
                    {{ form_errors(registrationForm.adress) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.phone) }}
                {{ form_widget(registrationForm.phone) }}
                <div class="form-error">
                    {{ form_errors(registrationForm.phone) }}
                </div>
            </div> 

            <div class="form-group">
                {{ form_label(registrationForm.email) }}
                {{ form_widget(registrationForm.email) }}
                <div class="form-error">
                    {{ form_errors(registrationForm.email) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.plainPassword) }}
                {{ form_widget(registrationForm.plainPassword) }}
                <div class="form-error">
                    {{ form_errors(registrationForm.plainPassword) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.agreeTerms) }}
                {{ form_widget(registrationForm.agreeTerms) }}
                <div class="form-error">
                    {{ form_errors(registrationForm.agreeTerms) }}
                </div>
            </div>
        
            <div class="d-flex">
                <div class="form-group">
                    {{ form_row(registrationForm.save) }}
                </div>
                <button class="btn btn-secondary mt-4 mx-4"><a href="{{ path('app_login') }}" style="text-decoration:none; color:white;">Me connecter</a></button>
            </div>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}

