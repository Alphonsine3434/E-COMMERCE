{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <div class="container">
            <h2 class="my-4" > Listes Commandes </h2>
            
            <div>

                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Produit</th>
                            <th scope="col">Prix</th>
                            <th scope="col">Quantit√©</th>
                            <th scope="col">Total</th>
                            <th scope="col">Action</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        {% for element in data %}
                        <tr class="table-info">
                            <td scope="row">{{ element.product.title}}</td>
                            <td>{{ element.product.price }}</td>
                            <td>{{ element.quantity }}</td>
                            <td>{{ element.quantity * element.product.price }} $</td>
                            <td>
                                <a href="{{ path('cart_add', {id: element.product.id}) }}" class=""><i class="fa-solid fa-plus" style="color: #35c918;"></i></a>
                                <a href="{{ path('cart_remove', {id: element.product.id}) }}" class="mx-3"><i class="fa-solid fa-minus" style="color: #fcff3d;"></i></a>
                                <a href="{{ path('cart_delete', {id: element.product.id}) }}" class=""><i class="fa-solid fa-trash" style="color: #c33218;"></i></a>
                                
                            </td>
                        </tr>
                        {% else %}
                            <tr class="table-info">
                                <td colspan="5"> Votre commande est vide</td>
                            </tr>
                        {% endfor %}
                    
                    </tbody>
                    <tfoot>
                        <tr class="">
                            <td colspan="3"> Total</td>
                            <td>{{ total}}</td>
                            <td>
                                <a href="{{ path('cart_empty') }}" class="btn btn-danger">Vider</a>
                            </td>
                        </tr>
                    </tfoot>

                </table>
                
            </div>
    </div>
{% endblock %}

