{% include "Front_office/base_front.html.twig" %}

{% block header %}
    {% include "Front_office/Partials/Header/_header.html.twig" %}
{% endblock %}

{% block sidebar %}
    {% include "Front_office/Partials/Sidebar/_sidebar.html.twig" %}
{% endblock %}

{% block body %}
<!-- Categories Section Begin -->


    <!-- Most Search Section Begin -->
    <section class="most-search spad" style="padding-top: 25px;">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <h2>Nos Meilleures Voitures</h2>
                        <p>accéder facilement à des
                                voitures spéciales classés en différentes et fascinantes catégories. Des catégories sélectionnées
                                avec le plus grand soin pour leur importance.</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="most__search__tab">
                            <ul class="nav nav-tabs" role="tablist">
                                {% for brand in brands %}
                                <li class="nav-item">
                                    <a class="nav-link" data-toggle="tab" href="#tabs-1" role="tab">
                                        <span class="flaticon-039-fork"></span>
                                        {{ brand.name }}
                                    </a>
                                </li>
                                {% endfor %}
                            </ul>
                        </div>
                        <div class="tab-content">
                            <div class="tab-pane active" id="tabs-1" role="tabpanel">
                                <div class="row">
                                    {% for product in products %}
                                    <div class="col-lg-3 col-md-6">
                                        <div class="listing__item">
                                            <div class="listing__item__pic set-bg" data-setbg="{{ asset('Front_office/assets/img/images_car.jpeg') }}">
                                                <div class="listing__item__pic__btns">
                                                    <a href="#"><span class="icon_zoom-in_alt"></span></a>
                                                    <a href="#"><span class="icon_heart_alt"></span></a>
                                                </div>
                                            </div>
                                            <div class="listing__item__text">
                                                <div class="listing__item__text__inside">
                                                    <h5>{{ product.title}}</h5>
                                                    <div class="listing__item__text__rating">
                                                        <div class="listing__item__rating__star">
                                                            <span class="icon_star"></span>
                                                            <span class="icon_star"></span>
                                                            <span class="icon_star"></span>
                                                            <span class="icon_star"></span>
                                                            <span class="icon_star-half_alt"></span>
                                                        </div>
                                                        <h6>{{ product.price }}</h6>
                                                    </div>
                                                    <ul>
                                                        <li><span class="icon_pin_alt"></span>{{ product.description}}</li>
                                                        <li><span class="icon_phone"></span>{{ product.brands.name }}</li>
                                                    </ul>
                                                </div>
                                                <div class="listing__item__text__info">
                                                    <div class="listing__item__text__info__left">

                                                    </div>
                                                    <div class="listing__item__text__info__right"> <img src="img/listing/list_small_icon-4.png" alt=""> Ajouter au panier</div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    {% endfor %}
                                </div>
                            </div>
                            
                        </div>
                
                </div>
            </div>
        </div>
    </section>
    <!-- Most Search Section End -->

    <!-- Work Section Begin -->
{% endblock %}
