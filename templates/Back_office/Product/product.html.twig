{% include "Back_office/base_back.html.twig" %}

{% block header %}
    {% include "Back_office/partials/Header/_header.html.twig" %}
{% endblock %}

{% block sidebar %}
    {% include "Back_office/partials/Sidebar/_sidebar.html.twig" %}
{% endblock %}

{% block body %} 
    <main id="main" class="main">

    <div class="pagetitle">
      <h1>Data Tables</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html">Home</a></li>
          <li class="breadcrumb-item">Tables</li>
          <li class="breadcrumb-item active">Data</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">
        <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Datatables</h5>
              <p>Add lightweight datatables to your project with using the 
              <a href="https://github.com/fiduswriter/Simple-DataTables" target="_blank">
              Simple DataTables</a> library. Just add <code>.datatable</code> class name to any table you wish to conver to a datatable</p>


              <!-- Table with stripped rows -->
              <table class="table datatable">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Titre</th>
                    <th scope="col">Quantit√©</th>
                    <th scope="col">Prix</th>
                    <th scope="col">Types</th>
                    <th scope="col">Marque</th>
                    <th scope="col">Action</th>
                </tr>
                </thead>
                <tbody>
                    {% for product in products %}
                        <tr class="">
                            <th scope="row">#</th>
                            <td>{{ product.title}}</td>
                            <td>{{ product.quantityStock }}</td>
                            <td>{{ product.price }}</td>
                            <td>{{ product.types }}</td>
                            <td>{{ product.brands.name }}</td>
                            <td>
                                <a href="{{ path('product.edit', { id: product.id } ) }}" class=""><i class="fa-solid fa-pen-to-square" style="color: #28c850;"></i></i></a>
                                <a href="{{ path('product.delete', { id: product.id} ) }}" class="mx-4"><i class="fa-solid fa-trash" style="color: #c33218;"></i></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
              </table>
              <!-- End Table with stripped rows -->

            </div>
          </div>

        </div>
      </div>
    </section>

  </main><!-- End #main -->
{% endblock %}
