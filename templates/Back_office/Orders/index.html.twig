{% extends 'base.html.twig' %}

{% block title %}Orders{% endblock %}

{% block body %}
    <div class="container">
            <h2 class="my-4" > Listes Commandes Validé</h2>
            <div>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Numéro</th>
                            <th scope="col">Date</th>
                            <th scope="col">Nom client</th>
                            <th scope="col">Prénom Client</th>
                            <th scope="col">Email Client</th>
                            <th scope="col">Montant Total</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        {% for order in orders %}
                        <tr class="table-info">
                            <td scope="row">{{ order.reference }}</td>
                            <td>{{ order.createdAt|format_datetime('short', 'none') }}</td>
                            <td>{{ order.users.name }}</td>
                            <td>{{ order.users.firstName }}</td>
                            <td>{{ order.users.email }}</td>
                            <td>Montant total</td>
                        </tr>
                        {% else %}
                            <tr class="table-info">
                                <td colspan="5"> Commande validé vide</td>
                            </tr>
                        {% endfor %}
                    
                    </tbody>
                    
                </table>
                
            </div>
    </div>
{% endblock %}