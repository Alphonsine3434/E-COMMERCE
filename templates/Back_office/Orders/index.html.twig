{% include "Back_office/base_back.html.twig" %}

{% block header %}
    {% include "Back_office/partials/Header/_header.html.twig" %}
{% endblock %}

{% block sidebar %}
    {% include "Back_office/partials/Sidebar/_sidebar.html.twig" %}
{% endblock %}

{% block body %} 
  <main id="main" class="main">

    <div class="pagetitle">
      <h1>Commandes</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html.twig">Admin</a></li>
          <li class="breadcrumb-item">Orders</li>
          <li class="breadcrumb-item active">Liste</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">
        <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
              <h2 class="card-title">Listes Commandes</h2>
        
                {% if not orders.items is same as ([]) %}
        
                    <!-- Table with stripped rows -->
                    <table class="table datatable mt-4">
                        <thead>
                            <tr>
                                <th scope="col">Numéro</th>
                                <th scope="col">Date</th>
                                <th scope="col">Nom client</th>
                                <th scope="col">Prénom Client</th>
                                <th scope="col">Email Client</th>
                                <th scope="col">Montant Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for order in orders %}
                                <tr class="">
                                    <th scope="row">{{ order.reference }}</th>
                                    <td>{{ order.createdAt|format_datetime('short', 'none') }}</td>
                                    <td>{{ order.users.name }}</td>
                                    <td>{{ order.users.firstName }}</td>
                                    <td>{{ order.users.email }}</td>
                                    <td>Montant total</td>
                                    
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                    <!-- End Table with stripped rows -->
                <div class="navigation">
                    {{ knp_pagination_render(products) }}
                </div>
                {% else %}
                    <h3> Il n'y a pas des commandes Validés </h3>
                {% endif %}
            </div>
          </div>

        </div>
      </div>
    </section>

  </main><!-- End #main -->
{% endblock %}
