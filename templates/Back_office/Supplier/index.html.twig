{% include "Back_office/base_back.html.twig" %}

{% block header %}
    {% include "Back_office/partials/Header/_header.html.twig" %}
{% endblock %}

{% block sidebar %}
    {% include "Back_office/partials/Sidebar/_sidebar.html.twig" %}
{% endblock %}

{% block body %}

    <main id="main" class="main">

        <div class="pagetitle">
            <h1>Produits</h1>
            <nav>
                <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html.twig">Admin</a></li>
                <li class="breadcrumb-item">Supplier</li>
                <li class="breadcrumb-item active">Liste</li>
                </ol>
            </nav>
        </div><!-- End Page Title -->

        <section class="section">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <h2 class="card-title">Listes Fournisseurs</h2>
                            <div class="d-flex justify-content-end">
                                <a href="{{ path('app_supplier_new') }}" class="btn btn-primary"><i class="ri-add-fill" style="color: #fff;"></i> Créer un Fournisseur</a>
                            </div>
                            {% if not suppliers.items is same as ([]) %}
                    
                            {% for message in app.flashes('success') %}
                                <div class="alert alert-success mt-4">  
                                    {{ message }}
                                </div>
                            {% endfor %}

                            <!-- Table with stripped rows -->
                            <table class="table datatable mt-4">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Référence</th>
                                        <th scope="col">Nom</th>
                                        <th scope="col">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for supplier in suppliers %}
                                        <tr class="">
                                            <th scope="row"></th>
                                            <td>{{ supplier.reference }}</td>
                                            <td>{{ supplier.name }}</td>
                                            <td>
                                                <a href="{{ path('app_supplier_edit', { id: supplier.id } ) }}" class=""><i class="ri-edit-2-fill" style="color: #28c850;"></i></a>
                                                <a href="{{ path('app_supplier_delete', { id: supplier.id} ) }}" class="mx-4"><i class="ri-delete-bin-5-fill" style="color: #c33218;"></i></a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                
                                </tbody>
                            </table>
                
                            <!-- End Table with stripped rows -->
                            <div class="navigation">
                                {{ knp_pagination_render(suppliers) }}
                            </div>
                            {% else %}
                                <h4> Il n'y a pas des produits </h4>
                            {% endif %}
                            </div>
                        </div>

                    </div>
                </div>
        </section>
  </main><!-- End #main -->

{% endblock %}
